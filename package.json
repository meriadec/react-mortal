{
  "name": "react-mortal",
  "version": "3.0.1",
  "description": "An animated react-portal powered by react-motion",
  "main": "lib/Mortal.js",
  "scripts": {
    "build:examples": "BUILD_EXAMPLES=1 webpack",
    "build": "babel src -d lib",
    "lint": "eslint src examples",
    "prettier": "prettier --write \"{src,examples}/**/*.?(js|json)\"",
    "start": "webpack-dev-server --content-base examples/ --inline",
    "test": "echo no tests yet"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/meriadec/react-mortal.git"
  },
  "keywords": [
    "react",
    "react-motion",
    "react-portal"
  ],
  "author": "Meriadec Pillet",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/meriadec/react-mortal/issues"
  },
  "homepage": "https://github.com/meriadec/react-mortal#readme",
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ],
            "node": "current"
          }
        }
      ],
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": [
      "zavatta",
      "zavatta-react",
      "prettier",
      "prettier/react"
    ]
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-motion": "^0.5.0",
    "react-portal": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-zavatta": "^6.0.1",
    "eslint-config-zavatta-react": "^2.2.2",
    "eslint-plugin-react": "^7.1.0",
    "prettier": "^1.8.2",
    "react-dom": "^16.1.1",
    "styled-components": "^2.2.4",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  }
}
